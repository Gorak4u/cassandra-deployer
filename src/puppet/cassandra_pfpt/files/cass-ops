#!/bin/bash
# This file is managed by Puppet.
set -euo pipefail

# --- Color Codes ---
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# --- Help Function ---
usage() {
    # Using a here document with `column` for clean, aligned output.
    (
    echo -e "${BOLD}Unified operations script for Cassandra.${NC}"
    echo ""
    echo -e "${YELLOW}Usage:${NC}"
    echo -e "  cass-ops <command> [arguments...]"
    echo ""
    echo -e "${YELLOW}Available Commands:${NC}"
    echo ""
    # Format: "command\tDescription"
    # The `column` command will auto-align the columns.
    echo -e "${GREEN}Documentation${NC}"
    echo -e "  manual\tDisplay the full operations manual in the terminal."
    echo -e "  backup-guide\tDisplay the full backup and recovery guide."
    echo -e "  puppet-guide\tDisplay the Puppet architecture guide."

    echo -e "${GREEN}Node & Cluster Status${NC}"
    echo -e "  health\tRun a comprehensive health check on the local node."
    echo -e "  cluster-health\tQuickly check cluster connectivity and nodetool status."
    echo -e "  disk-health\tCheck disk usage against warning/critical thresholds."
    echo -e "  version\tAudit and print versions of key software (OS, Java, Cassandra)."
    echo -e "  upgrade-check\tRun pre-flight checks before a major version upgrade."

    echo -e "${GREEN}Node Lifecycle & Maintenance${NC}"
    echo -e "  stop\tSafely drain and stop the Cassandra service."
    echo -e "  restart\tPerform a safe, rolling restart of the Cassandra service."
    echo -e "  reboot\tSafely drain Cassandra and reboot the machine."
    echo -e "  drain\tDrain the node, flushing memtables and stopping client traffic."
    echo -e "  decommission\tPermanently remove this node from the cluster after streaming its data."
    echo -e "  replace\tConfigure this NEW, STOPPED node to replace a dead node."
    echo -e "  rebuild\tRebuild the data on this node by streaming from another datacenter."

    echo -e "${GREEN}Data Management & Repair${NC}"
    echo -e "  repair\tRun a safe, granular repair on the node's token ranges. Can target a specific keyspace."
    echo -e "  cleanup\tRun 'nodetool cleanup' with safety checks."
    echo -e "  compact\tRun 'nodetool compact' with safety checks."
    echo -e "  garbage-collect\tRun 'nodetool garbagecollect' with safety checks."
    echo -e "  upgrade-sstables\tRun 'nodetool upgradesstables' with safety checks."

    echo -e "${GREEN}Backup & Recovery${NC}"
    echo -e "  backup\tManually trigger a full, node-local backup to S3."
    echo -e "  incremental-backup\tManually trigger an incremental backup to S3."
    echo -e "  backup-status\tCheck the status of the last completed backup for a node."
    echo -e "  snapshot\tTake an ad-hoc snapshot with a generated tag."
    echo -e "  restore\tRestore data from S3, list backups, or show restore chains."

    echo -e "${GREEN}Advanced & Destructive Operations${NC}"
    echo -e "  assassinate\tForcibly remove a dead node from the cluster's gossip ring."

    echo -e "${GREEN}Performance Testing${NC}"
    echo -e "  stress\tRun 'cassandra-stress' via a robust wrapper."

    ) | column -s -t | less -R

    exit 0
}


if [ "$#" -eq 0 ]; then
    usage
fi

COMMAND="$1"
shift # Remove the command from the argument list, the rest are for the subcommand

# The main dispatcher
case "$COMMAND" in
    health)
        /usr/local/bin/node_health_check.sh "$@"
        ;;
    cluster-health)
        /usr/local/bin/cluster-health.sh "$@"
        ;;
    disk-health)
        /usr/local/bin/disk-health-check.sh "$@"
        ;;
    version)
        /usr/local/bin/version-check.sh "$@"
        ;;
    stop)
        /usr/local/bin/stop-node.sh "$@"
        ;;
    restart)
        /usr/local/bin/rolling_restart.sh "$@"
        ;;
    reboot)
        /usr/local/bin/reboot-node.sh "$@"
        ;;
    drain)
        /usr/local/bin/drain-node.sh "$@"
        ;;
    decommission)
        /usr/local/bin/decommission-node.sh "$@"
        ;;
    replace)
        /usr/local/bin/prepare-replacement.sh "$@"
        ;;
    rebuild)
        /usr/local/bin/rebuild-node.sh "$@"
        ;;
    upgrade-check)
        /usr/local/bin/cassandra-upgrade-precheck.sh "$@"
        ;;
    repair)
        /usr/local/bin/range-repair.sh "$@"
        ;;
    cleanup)
        /usr/local/bin/cleanup-node.sh "$@"
        ;;
    compact)
        /usr/local/bin/compaction-manager.sh "$@"
        ;;
    garbage-collect)
        /usr/local/bin/garbage-collect.sh "$@"
        ;;
    upgrade-sstables)
        /usr/local/bin/upgrade-sstables.sh "$@"
        ;;
    backup)
        /usr/local/bin/full-backup-to-s3.sh "$@"
        ;;
    incremental-backup)
        /usr/local/bin/incremental-backup-to-s3.sh "$@"
        ;;
    backup-status)
        /usr/local/bin/backup-status.sh "$@"
        ;;
    snapshot)
        /usr/local/bin/take-snapshot.sh "$@"
        ;;
    restore)
        /usr/local/bin/restore-from-s3.sh "$@"
        ;;
    assassinate)
        /usr/local/bin/assassinate-node.sh "$@"
        ;;
    stress)
        /usr/local/bin/stress-test.sh "$@"
        ;;
    manual)
        /usr/local/bin/cassandra-manual.sh "$@"
        ;;
    backup-guide)
        PAGER="less -R" man /usr/share/doc/cassandra_pfpt/BACKUP_AND_RECOVERY_GUIDE.md
        ;;
    puppet-guide)
        PAGER="less -R" man /usr/share/doc/cassandra_pfpt/PUPPET_ARCHITECTURE_GUIDE.md
        ;;
    help|-h|--help)
        usage
        ;;
    *)
        echo -e "${RED}Error: Unknown command '$COMMAND'${NC}" >&2
        echo "" >&2
        # A lightweight usage message for errors
        echo -e "${YELLOW}Usage:${NC} cass-ops <command>" >&2
        echo -e "Run 'cass-ops --help' for a list of available commands." >&2
        exit 1
        ;;
esac
