endpoint_snitch: <%= @cassandra_pfpt::endpoint_snitch ? @cassandra_pfpt::endpoint_snitch : 'GossipingPropertyFileSnitch' %>
dynamic_snitch: <%= @cassandra_pfpt::dynamic_snitch %>
authenticator: <%= @cassandra_pfpt::authenticator ? @cassandra_pfpt::authenticator : 'PasswordAuthenticator' %>
authorizer: <%= @cassandra_pfpt::authorizer ? @cassandra_pfpt::authorizer : 'CassandraAuthorizer' %>
