commitlog_sync: <%= @cassandra_pfpt::commitlog_sync %>
commitlog_sync_period_in_ms: <%= @cassandra_pfpt::commitlog_sync_period_in_ms %>
commit_failure_policy: <%= @cassandra_pfpt::commit_failure_policy %>
disk_failure_policy: <%= @cassandra_pfpt::disk_failure_policy %>
concurrent_reads: <%= @cassandra_pfpt::concurrent_reads ? @cassandra_pfpt::concurrent_reads : 32 %>
concurrent_writes: <%= @cassandra_pfpt::concurrent_writes ? @cassandra_pfpt::concurrent_writes : 32 %>
concurrent_counter_writes: <%= @cassandra_pfpt::concurrent_counter_writes ? @cassandra_pfpt::concurrent_counter_writes : 32 %>
concurrent_compactors: <%= @cassandra_pfpt::concurrent_compactors %>
compaction_throughput_mb_per_sec: <%= @cassandra_pfpt::compaction_throughput_mb_per_sec %>
memtable_allocation_type: <%= @cassandra_pfpt::memtable_allocation_type ? @cassandra_pfpt::memtable_allocation_type : 'heap_buffers' %>
index_summary_capacity_in_mb: <%= @cassandra_pfpt::index_summary_capacity_in_mb ? @cassandra_pfpt::index_summary_capacity_in_mb : '' %>
file_cache_size_in_mb: <%= @cassandra_pfpt::file_cache_size_in_mb ? @cassandra_pfpt::file_cache_size_in_mb : '' %>
counter_cache_size_in_mb: <%= @cassandra_pfpt::counter_cache_size_in_mb ? @cassandra_pfpt::counter_cache_size_in_mb : '' %>
